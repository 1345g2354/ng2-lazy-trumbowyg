{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "declaration": true,
    "rootDir": ".",
    "types": [
      "core-js"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "index.ts",
    "src/trumbowyg.component.ts",
    "src/trumbowyg.service.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
